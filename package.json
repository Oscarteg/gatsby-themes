{
  "name": "gatsby-themes",
  "version": "0.0.1",
  "private": true,
  "description": "A couple of gatsby themes that I personally use",
  "main": "index.ts",
  "repository": "https://github.com/oscarteg/gatsby-themes",
  "author": "Oscar te Giffel <oscar@tegiffel.com>",
  "license": "MIT",
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "publish": "lerna publish",
    "test": "jest",
    "test:watch": "jest --watch",
    "examples:deepmind": "yarn workspace @oscarteg/gatsby-example-deepmind",
    "examples:showoff": "yarn workspace @oscarteg/gatsby-example-showoff",
    "format": "prettier --write \"**/*.{ts,tsx,mdx,md,scss,js}\"",
    "lint:fix": "eslint --fix \"**/*.{ts,tsx}\""
  },
  "workspaces": [
    "examples/*",
    "core/*",
    "themes/*"
  ],
  "lint-staged": {
    "*.{js,jsx,json,md,yml,ts,tsx}": [
      "prettier --write"
    ],
    "*.{ts,tsx}": [
      "eslint --fix",
      "yarn test --bail --findRelatedTests"
    ]
  },
  "engines": {
    "node": ">=12.16.0",
    "yarn": ">=1.22.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.11.1",
    "@testing-library/react": "^10.4.7",
    "@types/jest": "^26.0.4",
    "@types/node": "^14.0.23",
    "@types/react": "^16.9.43",
    "@types/react-dom": "^16.9.8",
    "babel-eslint": "^10.1.0",
    "cypress": "^4.10.0",
    "eslint": "^7.2.0",
    "eslint-config-airbnb": "^18.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.3",
    "eslint-plugin-react-hooks": "^4.0.8",
    "husky": "^4.2.5",
    "jest": "^26.1.0",
    "lerna": "^3.22.1",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5",
    "ts-jest": "^26.1.1",
    "typescript": "^3.9.7"
  }
}
